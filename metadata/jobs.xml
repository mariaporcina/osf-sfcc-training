    <job job-id="testjob" priority="0">
        <description>My test job</description>
        <parameters/>
        <flow>
            <context site-id="RefArch"/>
            <step step-id="testjob" type="ExecuteScriptModule" enforce-restart="false">
                <description>Test job logging Hello World</description>
                <parameters>
                    <parameter name="ExecuteScriptModule.Module">app_training/cartridge/scripts/job/testJob.js</parameter>
                    <parameter name="ExecuteScriptModule.FunctionName">execute</parameter>
