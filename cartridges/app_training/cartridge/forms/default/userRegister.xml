<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
    <group formid="userprofile">
        <field
            formid="useremail"
            label="label.input.email.profile"
            mandatory="true"
            max-length="50"
            missing-error="error.message.required"
            parse-error="error.message.parse.email.profile.form"
            range-error="error.message.50orless"
            value-error="ValueErrorText"
            type="string" />

        <field
            formid="userfirstname"
            label="label.input.firstname.profile"
            mandatory="true"
            max-length="50"
            missing-error="error.message.required"
            range-error="error.message.50orless"
            type="string" />

        <field
            formid="userlastname"
            label="label.input.lastname.profile"
            mandatory="true"
            max-length="50"
            missing-error="error.message.required"
            range-error="error.message.50orless"
            type="string" />

        <field
            formid="userphone"
            label="label.input.phone.profile"
            mandatory="true"
            max-length="50"
            missing-error="error.message.required"
            range-error="error.message.50orless"
            type="string" />

    </group>
</form>